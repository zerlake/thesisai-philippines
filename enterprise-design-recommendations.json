    "heroSection": {
      "layout": "full-width-gradient-with-particle-effects",
      "background": {
        "type": "gradient-with-particles",
        "gradient": "linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #334155 100%)",
        "particleEffects": {
          "enabled": true,
          "particleCount": 150,
          "particleSize": "2px",
          "particleColor": "rgba(59, 130, 246, 0.3)",
          "particleSpeed": 0.5,
          "particleOpacity": 0.7
        }
      },
      "content": {
        "headline": {
          "text": "Elevate Your Academic Research",
          "fontSize": "clamp(2.5rem, 8vw, 4.5rem)",
          "fontWeight": "black",
          "color": "white",
          "textShadow": "0 2px 10px rgba(0, 0, 0, 0.3)",
          "gradientText": {
            "enabled": true,
            "text": "with Enterprise AI",
            "gradient": "linear-gradient(90deg, #3b82f6 0%, #8b5cf6 50%, #ec4899 100%)",
            "backgroundClip": "text",
            "textFillColor": "transparent"
          }
        },
        "subtitle": {
          "text": "Comprehensive research tools designed for academic excellence and enterprise collaboration",
          "fontSize": "1.25rem",
          "color": "rgba(212, 212, 216, 0.9)",
          "maxWidth": "600px",
          "lineHeight": "1.6"
        },
        "ctaButtons": [
          {
            "text": "Start Research Journey",
            "variant": "primary",
            "size": "lg",
            "icon": "arrow-right",
            "gradient": "linear-gradient(90deg, #3b82f6 0%, #8b5cf6 100%)",
            "hoverEffect": "scale-105",
            "shadow": "0 10px 25px rgba(59, 130, 246, 0.3)",
