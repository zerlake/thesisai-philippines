          {
            "text": "Explore Features",
            "variant": "outline",
            "size": "lg",
            "borderColor": "rgba(107, 114, 128, 0.5)",
            "textColor": "white",
            "hoverBackground": "rgba(30, 41, 59, 0.8)",
            "animation": "fade-in"
          }
        ],
        "stats": [
          {
            "icon": "users",
            "label": "Research Tools",
            "value": "25+",
            "animation": "fade-in-up"
          },
          {
            "icon": "trending-up",
            "label": "AI Models",
            "value": "10+",
            "animation": "fade-in-up"
          },
          {
            "icon": "sparkles",
            "label": "Institutions",
            "value": "50+",
            "animation": "fade-in-up"
          }
        ],
        "trustStatement": {
          "text": "Trusted by academic researchers worldwide",
          "icon": "check-circle",
          "animation": "fade-in"
        }
      },
      "animations": {
        "background": {
          "type": "floating-orb",
          "orb1": {
            "position": "top-left",
            "size": "18rem",
            "color": "rgba(59, 130, 246, 0.1)",
            "blur": "3xl",
            "animation": "pulse-slow"
          },
          "orb2": {
            "position": "bottom-right",
            "size": "24rem",
            "color": "rgba(139, 92, 246, 0.1)",
            "blur": "3xl",
            "animation": "pulse-slower"
          }
        },
        "content": {
          "sequence": [
            {
              "element": "badge",
              "animation": "fade-in",
              "delay": "0.2s",
              "duration": "0.5s"
            },
            {
              "element": "headline",
              "animation": "fade-in-up",
              "delay": "0.3s",
              "duration": "0.6s"
            },
            {
              "element": "subtitle",
              "animation": "fade-in-up",
              "delay": "0.4s",
              "duration": "0.6s"
            },
            {
              "element": "stats",
              "animation": "fade-in-up",
              "delay": "0.5s",
              "duration": "0.6s",
              "stagger": "0.1s"
            },
            {
              "element": "cta-buttons",
              "animation": "fade-in-up",
              "delay": "0.7s",
              "duration": "0.6s"
            },
            {
              "element": "trust-statement",
              "animation": "fade-in",
              "delay": "0.9s",
              "duration": "0.5s"
            }
          ]
        }
      }
    },
