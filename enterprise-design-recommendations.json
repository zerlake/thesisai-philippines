    "animations": {
      "global": {
        "easing": "cubic-bezier(0.4, 0, 0.2, 1)",
        "duration": "0.4s",
        "reducedMotion": {
          "enabled": true,
          "fallback": "fade-in"
        }
      },
      "presets": {
        "fade-in": {
          "opacity": [0, 1],
          "transition": "opacity 0.4s ease"
        },
        "fade-in-up": {
          "opacity": [0, 1],
          "transform": ["translateY(20px)", "translateY(0)"],
          "transition": "opacity 0.4s ease, transform 0.4s ease"
        },
        "fade-in-right": {
          "opacity": [0, 1],
          "transform": ["translateX(20px)", "translateX(0)"],
          "transition": "opacity 0.4s ease, transform 0.4s ease"
        },
        "scale-in": {
          "opacity": [0, 1],
          "transform": ["scale(0.9)", "scale(1)"],
          "transition": "opacity 0.4s ease, transform 0.4s ease"
        },
        "pulse": {
          "animation": "pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite"
        },
        "pulse-slow": {
          "animation": "pulse 4s cubic-bezier(0.4, 0, 0.6, 1) infinite"
        },
        "hover-rise": {
          "transform": "translateY(-4px)",
          "transition": "transform 0.3s ease",
          "shadow": "0 10px 25px rgba(0, 0, 0, 0.1)"
        }
      },
      "interactive": {
        "buttonHover": {
          "transform": "scale(1.05) translateY(-2px)",
          "transition": "all 0.3s ease",
          "shadow": "0 10px 20px rgba(0, 0, 0, 0.15)"
        },
        "cardHover": {
          "transform": "translateY(-4px)",
          "transition": "all 0.3s ease",
          "shadow": "0 15px 35px rgba(0, 0, 0, 0.1)"
        },
        "hapticFeedback": {
          "enabled": true,
          "duration": "10ms",
          "pattern": [10]
        }
      }
    },
    "responsiveDesign": {
      "breakpoints": {
        "sm": "640px",
        "md": "768px",
        "lg": "1024px",
        "xl": "1280px",
        "2xl": "1536px"
      },
      "mobileFirst": true,
      "touchTargets": {
        "minimumSize": "48px",
        "spacing": "8px"
      },
      "performance": {
        "imageOptimization": {
          "format": "webp",
          "quality": "85",
          "sizes": "responsive"
        },
        "lazyLoading": {
          "enabled": true,
          "threshold": "100px"
        },
        "codeSplitting": {
          "enabled": true,
          "chunkSize": "300kb"
        }
      }
    },
    "accessibility": {
      "colorContrast": {
        "minimumRatio": "4.5:1",
        "text": "#ffffff on #1e293b",
        "interactive": "#ffffff on #3b82f6"
      },
      "keyboardNavigation": {
        "focusIndicators": "2px solid #3b82f6",
        "skipLinks": true,
        "logicalTabOrder": true
      },
      "ariaAttributes": {
        "labels": true,
        "liveRegions": true,
        "hiddenContent": true
      },
      "reducedMotion": {
        "supported": true,
        "fallbackAnimations": "fade-in"
      }
    },
    "implementationNotes": {
      "framework": "Next.js with TypeScript",
      "animationLibrary": "Framer Motion",
      "styling": "Tailwind CSS with custom plugins",
      "stateManagement": "React Context + Zustand",
      "performance": {
        "optimizations": [
          "Code splitting for heavy components",
          "Intersection observer for lazy loading",
          "Memoization for expensive calculations",
          "Web Workers for background processing"
        ]
      },
      "testing": {
        "unit": "Vitest + React Testing Library",
        "integration": "Cypress",
        "e2e": "Playwright",
        "accessibility": "axe-core + manual testing"
      }
    }
  }
